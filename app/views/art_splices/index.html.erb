<h1>Listing art_splices</h1>

<table>
  <thead>
    <tr>
      <th>Art</th>
      <th>Order</th>
      <th>Path</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @art_splices.each do |art_splice| %>
      <tr>
        <td><%= art_splice.art_id %></td>
        <td><%= art_splice.order %></td>
        <td><%= art_splice.path %></td>
        <td><%= art_splice.text %></td>
        <td><%= link_to 'Show', art_splice %></td>
        <td><%= link_to 'Edit', edit_art_splice_path(art_splice) %></td>
        <td><%= link_to 'Destroy', art_splice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

