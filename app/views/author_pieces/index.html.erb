<h1>Listing author_pieces</h1>

<table>
  <thead>
    <tr>
      <th>Au</th>
      <th>Piece</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @author_pieces.each do |author_piece| %>
      <tr>
        <td><%= author_piece.au_id %></td>
        <td><%= author_piece.piece_id %></td>
        <td><%= author_piece.role %></td>
        <td><%= link_to 'Show', author_piece %></td>
        <td><%= link_to 'Edit', edit_author_piece_path(author_piece) %></td>
        <td><%= link_to 'Destroy', author_piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author piece', new_author_piece_path %>
