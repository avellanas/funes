<h1>Listing announces</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Popup</th>
      <th>Window height</th>
      <th>Window width</th>
      <th>Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announces.each do |announce| %>
      <tr>
        <td><%= announce.title %></td>
        <td><%= announce.text %></td>
        <td><%= announce.popup %></td>
        <td><%= announce.window_height %></td>
        <td><%= announce.window_width %></td>
        <td><%= announce.expiration %></td>
        <td><%= link_to 'Show', announce %></td>
        <td><%= link_to 'Edit', edit_announce_path(announce) %></td>
        <td><%= link_to 'Destroy', announce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Announce', new_announce_path %>
