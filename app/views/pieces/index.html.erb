<h1>Listing pieces</h1>

<table>
  <thead>
    <tr>
      <th>Issue num</th>
      <th>Page</th>
      <th>Type</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Exlibris</th>
      <th>Text</th>
      <th>Footer</th>
      <th>Css</th>
      <th>Parent</th>
      <th>Child order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.issue_num %></td>
        <td><%= piece.page %></td>
        <td><%= piece.type_id %></td>
        <td><%= piece.title %></td>
        <td><%= piece.subtitle %></td>
        <td><%= piece.exlibris %></td>
        <td><%= piece.text %></td>
        <td><%= piece.footer %></td>
        <td><%= piece.css %></td>
        <td><%= piece.parent_id %></td>
        <td><%= piece.child_order %></td>
        <td><%= link_to 'Show', piece %></td>
        <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
        <td><%= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Piece', new_piece_path %>
